@model List<MVC_CoffeeApplication.Models.Entities.Category>
@{
    ViewData["Title"] = "Category List";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5>@ViewData["Title"]</h5>
                <a href="/Dashboard/Category/Create" class="btn btn-sm btn-success">New Category</a>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Category Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <th>@category.ID</th>
                                <th>@category.CategoryName</th>
                                <th>
                                    <a href="/Dashboard/Category/Update/@category.ID" class="btn btn-sm btn-warning">update</a>
                                    <a href="/Dashboard/Category/Delete/@category.ID" class="btn btn-sm btn-danger">delete</a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

